 /* PROGRAM MENENTUKAN TINGGI / BERAT IDEAL DENGAN SISTEM BMI */
 /* Menentukan tinggi atau berat yang harus dicapai agar mendapatkan
  * tubuh yang ideal dengan rumus BMI. Masukan yaitu tinggi dan berat
  * badan, keluaran berupa selisih berat yang agar mendapat tubuh 
  * yang ideal. BMI didapat dari berat(kg)/(tinggi(cm)*tinggi(cm))
  */


#include <stdio.h>

main()
{
	
	/* DEKLARASI */
	float tinggi, berat, beratSeharusnya, selisihBerat, bmi;
	
	/* ALGORITMA */
	printf("Berat(kg) : "); scanf("%f", &berat);
	printf("Tinggi(cm) : "); scanf("%f", &tinggi);
	
	tinggi = tinggi / 100;
	
	bmi = berat / (tinggi * tinggi);
	
	if(bmi < 18.00) {
		beratSeharusnya = 18 * tinggi * tinggi;
		selisihBerat = beratSeharusnya - berat;
	} else if (bmi > 21.00) {
		beratSeharusnya = 21 * tinggi * tinggi;
		selisihBerat = berat - beratSeharusnya;
	};
	
	if (bmi >= 18 && bmi <= 21) {
		printf("Berat badan Anda normal.");
	} else if(bmi <= 18) {
		printf("Underweight, Anda perlu menaikkan menaikkan berat badan Anda sebesar %f kg", selisihBerat);
	} else {
		printf("Overweight, Anda perlu menurunkan berat badan Anda sebesar %f kg", selisihBerat);
	};
}




